@using Sitecore.Feature.Teasers
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel

<div class="threeImageTeaser">
    <div class="container">
        <div class="wpb_column vc_column_container vc_col-sm-3">
            <div class="vc_column-inner ">
                <div class="wpb_wrapper">
                    <div class="wpb_single_image wpb_content_element vc_align_left  vc_custom_1456849951123">
                        <figure class="wpb_wrapper vc_figure">
                            <div class="vc_single_image-wrapper vc_box_rounded  vc_box_border_grey"><img width="150" height="150" src="@Model.Item.ImageUrl(Templates.ThreeImagesTeaser.Fields.Image1)" class="vc_single_image-img attachment-thumbnail" alt="Dresden Restaurantjpg"></div>
                        </figure>
                    </div>

                    <div class="wpb_single_image wpb_content_element vc_align_left  vc_custom_1456825470480">
                        <figure class="wpb_wrapper vc_figure">
                            <div class="vc_single_image-wrapper vc_box_rounded  vc_box_border_grey"><img width="150" height="150" src="@Model.Item.ImageUrl(Templates.ThreeImagesTeaser.Fields.Image2)" class="vc_single_image-img attachment-thumbnail" alt="Blick auf Dresden"></div>
                        </figure>
                    </div>

                    <div class="wpb_single_image wpb_content_element vc_align_left  vc_custom_1456825483117">
                        <figure class="wpb_wrapper vc_figure">
                            <div class="vc_single_image-wrapper vc_box_rounded  vc_box_border_grey"><img width="150" height="150" src="@Model.Item.ImageUrl(Templates.ThreeImagesTeaser.Fields.Image3)" class="vc_single_image-img attachment-thumbnail" alt="SUGDE Dresden"></div>
                        </figure>
                    </div>
                </div>
            </div>
        </div><div class="wpb_column vc_column_container vc_col-sm-9">
            <div class="vc_column-inner ">
                <div class="wpb_wrapper">
                    <h2 style="text-align: left;font-family:Montserrat;font-weight:400;font-style:normal" class="vc_custom_heading">@Html.Sitecore().Field(Templates.ThreeImagesTeaser.Fields.Title_FieldName, Model.Item)</h2>
                    <div class="wpb_text_column wpb_content_element ">
                        <div class="wpb_wrapper">
                           @Html.Sitecore().Field(Templates.ThreeImagesTeaser.Fields.Text_FieldName, Model.Item)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>
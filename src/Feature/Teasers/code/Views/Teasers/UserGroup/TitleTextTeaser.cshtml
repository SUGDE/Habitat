@using Sitecore.Feature.Teasers
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel

 <div class="container">
    <div class="wpb_column vc_column_container vc_col-sm-12">
     <div class="vc_column-inner ">
        <div class="wpb_wrapper">
         <div class="custom-header">
            <h2 class="text-center" style="color:;">@Html.Sitecore().Field(Templates.TeaserContent.Fields.Title.ToString(), Model.Item)</h2>
            <p class="lead text-center" style="color:; ">@Html.Sitecore().Field(Templates.TeaserContent.Fields.Summary.ToString(), Model.Item)</p>
            </div>
         </div>
        </div>
     </div>
     <div class="wpb_column vc_column_container vc_col-sm-12">
        <div class="vc_column-inner ">
            <div class="wpb_wrapper">
                <div class="vc_btn3-container vc_btn3-center">
                  @Html.Sitecore().Field(Templates.TeaserContent.Fields.Link.ToString(), Model.Item, new
             {
                 @class = "vc_general vc_btn3 vc_btn3-size-md vc_btn3-shape-square vc_btn3-style-modern vc_btn3-color-danger"
             }) 
                </div>
            </div>
        </div>
    </div>
</div>

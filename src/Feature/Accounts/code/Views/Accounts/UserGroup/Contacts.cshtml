@using System.Web.Mvc.Html
@using Sitecore.Analytics.Tracking
@using Sitecore.Feature.Accounts.Models
@using Sitecore.Feature.Accounts.Texts
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.SitecoreExtensions.HtmlHelpers
@using Sitecore.Mvc.Configuration
@model Sitecore.Feature.Accounts.Models.Contacts

<div class="entry-content">
    <h1>@ContactsTexts.Title</h1>
    <div role="form" class="wpcf7" id="wpcf7-f4-p873-o1" lang="de-DE" dir="ltr">
        <div class="screen-reader-response"></div>
        @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post))
        { 
            <div style="display: none;">
                <input type="hidden" name="_wpcf7" value="4">
                <input type="hidden" name="_wpcf7_version" value="4.4">
                <input type="hidden" name="_wpcf7_locale" value="de_DE">
                <input type="hidden" name="_wpcf7_unit_tag" value="wpcf7-f4-p873-o1">
                <input type="hidden" name="_wpnonce" value="443e44aff8">
            </div>
            <p>
                @Html.LabelFor(x => x.Name)<br>
                <span class="wpcf7-form-control-wrap your-name">
                    @Html.TextBoxFor(x => x.Name, new { @class = "wpcf7-form-control wpcf7-text wpcf7-validates-as-required",  id = "firstName" })
                </span>
            </p>
            <p>
                @Html.LabelFor(x => x.Email)<br>
                <span class="wpcf7-form-control-wrap your-email">
                    @Html.TextBoxFor(x => x.Email, new { @class = "wpcf7-form-control wpcf7-text wpcf7-email wpcf7-validates-as-required wpcf7-validates-as-email", id = "firstName" })
                </span>
            </p>
            <p>
                @Html.LabelFor(x => x.Subject)<br>
                <span class="wpcf7-form-control-wrap your-subject">
                    @Html.TextBoxFor(x => x.Email, new { @class = "wpcf7-form-control wpcf7-text", id = "firstName" })
                </span>
            </p>
            <p>
                @Html.LabelFor(x => x.News)<br>
                <span class="wpcf7-form-control-wrap your-message">
                    @Html.TextAreaFor(x => x.Email, new { @class = "wpcf7-form-control wpcf7-textarea wpcf7-validates-as-required",id = "firstName" })
                </span>
            </p>
            <p>
                <input type="submit" value="Senden" class="wpcf7-form-control wpcf7-submit">
                <img class="ajax-loader" src="-/media/96A483B50E3748D28B6AB65966F32239.ashx?h=16&thn=1&w=16" alt="Senden ..." style="visibility: hidden;">
            </p>
            <div class="wpcf7-response-output wpcf7-display-none"></div>
       
        }
    </div>
    <p>&nbsp;</p>
</div><!-- .entry-content -->

<footer class="entry-footer"></footer><!-- .entry-footer -->
 